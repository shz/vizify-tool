#card-player
  display table
  width 100%
  height 100%

  .wrapper
    display table-cell
    width 100%
    height 100%
    vertical-align middle
    text-align center

  #card-container
    width 600px
    display inline-block
    margin 10px
    position relative

    // Fix vizify sizing bug
    > div[style]
      width auto !important
      height auto !important

    canvas
      border 1px solid silver

  #card-controls
    display block

    #playpause
      box-sizing border-box
      padding 1px 0 0 1px
      transition all 0.2s
      display inline-block
      -webkit-appearance none
      -moz-appearance none
      width 32px
      height 32px
      border none
      color ui-blue
      border 2px solid ui-blue
      text-align center
      outline none
      font-size 20px
      letter-spacing 2px
      vertical-align top
      margin-right 4px
      cursor pointer
      background-color white
      border-radius 2px

      &:active
        transition none
        color ui-blue-active
        border-color ui-blue-active

    #scrubber
      opacity 0.4
      display inline-block
      background-color purple-dark
      position relative
      height 32px
      vertical-align top
      width calc(100% - 36px)
      color rgba(white, 0.9)
      line-height 32px
      cursor pointer
      background-image radial-gradient(400px at -10% 120px, blue 0%, transparent 100%)

      div
        box-sizing border-box
        border-right 1px solid rgba(white, 0.4)
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        background-color rgba(255, 255, 255, 0.3)
        transform-origin left
        z-index 1

      #timestamp
        position relative
        z-index 10
        cursor pointer
